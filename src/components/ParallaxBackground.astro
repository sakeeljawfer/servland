<div class="fixed inset-0 -z-10 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-900/80 dark:to-gray-800/80"></div>
  
  <!-- Cityscape background with parallax -->
  <div class="absolute inset-0 cityscape-background"></div>
  
  <!-- Grid overlay -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5 dark:opacity-10"></div>
</div>

<style>
  .cityscape-background {
    background-image: url('/sl-sky.webp');
    background-position: bottom center;
    background-size: cover;
    background-repeat: no-repeat;
    transform-origin: bottom;
    animation: parallax 25s ease-in-out infinite;
    opacity: 0.15;
    filter: blur(1px);
  }

  @keyframes parallax {
    0%, 100% {
      transform: translateY(0) scale(1.05);
    }
    50% {
      transform: translateY(-15px) scale(1);
    }
  }

  .bg-grid-pattern {
    background-image: linear-gradient(to right, rgba(0,0,0,0.1) 1px, transparent 1px),
                      linear-gradient(to bottom, rgba(0,0,0,0.1) 1px, transparent 1px);
    background-size: 50px 50px;
  }
</style>

<script>
  // Add parallax effect based on scroll
  window.addEventListener('scroll', () => {
    const cityscape = document.querySelector('.cityscape-background');
    if (cityscape) {
      const scrolled = window.pageYOffset;
      const rate = scrolled * 0.15;
      cityscape.style.transform = `translateY(${rate}px) scale(${1 + scrolled * 0.0001})`;
    }
  });
</script>