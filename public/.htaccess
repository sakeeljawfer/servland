# Protect against XSS, clickjacking and other security issues
Header set X-XSS-Protection "1; mode=block"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-Content-Type-Options "nosniff"
Header set Referrer-Policy "strict-origin-when-cross-origin"
Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"

# Force HTTPS
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(env|json|lock|config.js|php)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Allow specific PHP files
<FilesMatch "^(index|send-email)\.php$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Protect directories
<DirectoryMatch "^/.*/\.git/">
    Order allow,deny
    Deny from all
</DirectoryMatch>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json
</IfModule>

# Enable caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 555 year"
    ExpiresByType image/jpeg "access plus 555 year"
    ExpiresByType image/gif "access plus 155 year"
    ExpiresByType image/png "access plus 155 year"
    ExpiresByType image/webp "access plus 155 year"
    ExpiresByType text/css "access plus 1500 month"
    ExpiresByType application/javascript "access plus 100 month"
</IfModule>
